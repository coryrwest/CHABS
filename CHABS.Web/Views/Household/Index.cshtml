@model CHABS.Models.HouseholdViewModel

@section SecondaryNav {
	@Html.Partial("_SettingsNavPartial")
}

<div class="row">
	<div class="col-md-12">
			<h3>Add someone to your household</h3>
		<div class="row">
			<div class="col-md-8">
                <form asp-action="Index" class="form-horizontal" role="form">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.CurrentHouseholdName, new { @class = "col-md-6 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.CurrentHouseholdName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CurrentHouseholdName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserEmail, new { @class = "col-md-6 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.UserEmail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserEmail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-6 col-md-6">
                            <input type="submit" value="Add to household" class="btn btn-default" />
                        </div>
                    </div>
                </form>
			</div>
			<div class="col-md-4">
				<table class="table table-striped">
					@foreach (string username in Model.HouseholdUsers) {
						<tr>
							<td>@username</td>
						</tr>
					}
				</table>
			</div>
		</div>
	</div>
</div>