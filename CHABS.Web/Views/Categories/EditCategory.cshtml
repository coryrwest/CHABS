@model CHABS.API.Objects.Category

@section SecondaryNav {
	@Html.Partial("_BankNavPartial")
}

<h3>Edit Category</h3>
<div class="col-md-12">
	<div class="col-md-5">
		@using (Html.BeginForm("EditCategory", null, FormMethod.Post, new { @class = "form-horizontal" })) {
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<form class="form-horizontal">
				<div class="form-group">
					@Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
					<div class="col-md-9">
						@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Excluded, new { @class = "col-md-3 control-label" })
					<div class="col-md-9">
						@Html.CheckBoxFor(m => m.Excluded, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Excluded, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Sort, new { @class = "col-md-3 control-label" })
					<div class="col-md-9">
						@Html.TextBoxFor(m => m.Sort, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Sort, "", new { @class = "text-danger" })
					</div>
				</div>
				<div>
					@Html.HiddenFor(m => m.Id, new { @class = "form-control" })
					@Html.HiddenFor(m => m.HouseholdId, new { @class = "form-control" })
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" class="btn btn-default">Save</button>
					</div>
				</div>
			</form>
		}
	</div>
</div>


@section Scripts {
	@*@Scripts.Render("~/bundles/form")
	@Scripts.Render("~/bundles/ajax")*@

	<script>
		function AjaxBegin() {
			$('#results').html('');
		}

		function AjaxComplete() {
			$('form').last()[0].reset();
		}

		$(document).ready(function () {

		});
	</script>
}