@model CHABS.Models.BudgetListViewModel

<div class="col-md-12">
	<div class="row">
		<table class="table table-striped">
			<tbody>
				<tr>
					<th>Name</th>
					<th>Amount</th>
					<th></th>
				</tr>
				@foreach (var budget in Model.CurrentBudgets) {
					<tr>
						<td>@budget.Name</td>
						<td>@budget.Amount</td>
						<td>
							@if (budget.Deleted) {
								<a class="btn btn-xs btn-warning" href="@Url.Action("RestoreBudget", new {id = budget.Id})">Restore</a>
							} else {
								<a class="btn btn-xs btn-warning" href="@Url.Action("DeleteBudget", new { id = budget.Id })">Delete</a>
							}
						</td>
					</tr>
				}
			<tbody>
		</table>
	</div>
</div>